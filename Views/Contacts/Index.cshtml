@model IEnumerable<ContactDetailsApp.Models.Contact>
   @{
       ViewData["Title"]="Index";
   }

   <h1>Contact List</h1>

   <p>
       <a asp-action="Create" asp-controller="Contacts" >
           Create New Contact
       </a>
   </p>
   <table class="table">
       <thead>
           <tr>
               <th>
                   @Html.DisplayNameFor(model => model.ContactNo)
               </th>
               <th>
                   @Html.DisplayNameFor(model => model.FirstName)
               </th>
               <th>
                   @Html.DisplayNameFor(model => model.LastName)
               </th>
               <th>
                   @Html.DisplayNameFor(model => model.CellNo)
               </th>
               <th>
                   @Html.DisplayNameFor(model => model.PhotoFile)
               </th>
           </tr>
       </thead>
       <tbody>
@foreach (var item in Model) {
           <tr>
               <td>
                   @Html.DisplayFor(modelItem => item.ContactNo)
               </td>
               <td>
                   @Html.DisplayFor(modelItem => item.FirstName)
               </td>
               <td>
                   @Html.DisplayFor(modelItem => item.LastName)
               </td>
               <td>
                   @Html.DisplayFor(modelItem => item.CellNo)
               </td>
               <td>
                   @Html.DisplayFor(modelItem => item.PhotoFile)
               </td>
               <td>

                   @Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }) |
                   @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |
                   @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })
               </td>
           </tr>
}
    </tbody>
   </table>