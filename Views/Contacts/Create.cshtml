@model ContactDetailsApp.Models.Contact
   @{
       ViewData["Title"]="Create";
   }
   <h1>
       Add New Contact
   </h1>

   <form asp-action="Create" asp-controller="Contacts" enctype="multipart/form-data">
       <div class="form-group">
           <label asp-for="FirstName" class="control-label"></label>
           <input asp-for="FirstName" class="form-control" />
           <span asp-validation-for="FirstName" class="text-danger"></span>
       </div>
       <div class="form-group">
           <label asp-for="LastName" class="control-label"></label>
           <input asp-for="LastName" class="form-control" />
           <span asp-validation-for="LastName" class="text-danger"></span>
       </div>

       <div class="form-group">
           <label asp-for="ContactNo" class="control-label"></label>
           <input asp-for="ContactNo" class="form-control" />
           <span asp-validation-for="ContactNo" class="text-danger"></span>
       </div>

       <div class="form-group">
           <label asp-for="CellNo" class="control-label"></label>
           <input asp-for="CellNo" class="form-control" />
           <span asp-validation-for="CellNo" class="text-danger"></span>
       </div>

       <div class="form-group">
           <label asp-for="PhotoFile" class="control-label"></label>
           <input asp-for="PhotoFile" class="form-control" type="file" />
           <span asp-validation-for="PhotoFile" class="text-danger"> </span>
       </div>
       

       <div>
           <button type="submit">Add</button>
       </div>
   </form>